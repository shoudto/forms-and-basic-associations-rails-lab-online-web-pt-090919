<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>

  <%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br>

  <!-- Adding notes within Song_Form -->
  <%= f.fields_for :notes do |n| %>
    <%= n.label "Note Content" %>
    <%= n.text_field :content %><br>
  <% end %>
  
  <%= f.submit %>
<% end %>


